

<div class="tabs">
    <ul class="u-list">
        @foreach(var item in Items)
        {
            <li class="list-item" @onclick="(() => OnTabChosen(item))">
                <div class="@(ActiveItem == item ? "active" : "")">@item</div>
            </li>
        }
    </ul>
</div>


@code {
    [Parameter]
    public EventCallback<string> HandleTabChange { get; set; }

    [Parameter]
    public string[] Items { get; set; }

    [Parameter]
    public string ActiveItem { get; set; }

    public async Task OnTabChosen(string item)
    {
        await HandleTabChange.InvokeAsync(item);
    }

}

<style>
    .tabs {
        margin: 2em auto;
    }

    .u-list {
        display: flex;
        justify-content: center;
        padding: 0;
        list-style-type: none;
    }

    .list-item {
        margin: 0 16px;
        font-size: 18px;
        color: #aaa;
        cursor: pointer;
    }

    .active {
        color: #d91b42;
        border-bottom: 2px solid #d91b42;
        padding-bottom: 8px;
    }
</style>
