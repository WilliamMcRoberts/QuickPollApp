@inject NavigationManager _nav

<div class="nav-menu">
    <div @onclick="NavigateHome" class="logo">Quick Poll</div>
    <div >
        <AuthorizeView>
            <Authorized>
                <div class="nav-item">
                    <NavLink class="nav-btn" href="MicrosoftIdentity/Account/SignOut">Log Out</NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item">
                    <NavLink class="nav-btn" href="MicrosoftIdentity/Account/SignIn">Log In</NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

@code {
    private void NavigateHome() => _nav.NavigateTo("/");
}

<style>
    .logo {
        cursor: pointer;
        font-family: 'Pacifico', cursive;
        color: whitesmoke;
        font-size: 3em;
        margin: 0 1em;
        text-shadow:  5px 0 20px #f0f,  -1px 0 10px #0ff,  5px 0 20px #f0f,  -1px 0 20px #0ff, 0 0 20px #fff, -1px 0 20px #f0f, 5px 0 20px #0ff;
    }

    .nav-btn {
        text-decoration: none;
        border: 1px solid #f0f;
        border-radius: 6px;
        padding: 7px 14px;
        color: #f0f;
        font-weight: 900;
        transition: .25s ease;
        text-shadow: 0 0 1px whitesmoke, 0 0 2px whitesmoke,0 0 3px whitesmoke;
        box-shadow: inset 0 0 3px whitesmoke;
        font-size: 1em;
    }

    .nav-btn:hover {
       box-shadow: inset 0 0 60px whitesmoke, inset 20px 0 80px #f0f, inset -20px 0 80px #0ff, inset 20px 0 300px #f0f, inset -20px 0 300px #0ff, 0 0 50px #fff, -10px 0 80px #f0f, 10px 0 80px #0ff;
            color: #BF40BF;
        }
    
    .nav-menu {
        display: flex;
        justify-content: space-between;
        padding: 1em;
    }

    .nav-item {
        margin: 1.5em 4em;
    }

    @@media(max-width: 620px) {
        .nav-menu {
            flex-direction: column;
        }

        .logo {
            margin: 0 auto;
        }

        .nav-item {
            text-align: center;
        }
    }

</style>




