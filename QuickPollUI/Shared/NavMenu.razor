@inject NavigationManager _nav

<nav class="nav-menu">
    <div @onclick="NavigateHome" class="logo">Quick Poll</div>
    <div class="">
        <ul class="">
            <AuthorizeView>
                <Authorized>
                    <li class="nav-item">
                        <a class="nav-btn" href="MicrosoftIdentity/Account/SignOut">Log Out</a>
                    </li>
                </Authorized>
                <NotAuthorized>
                    <li class="nav-item">
                        <a class="nav-btn" href="MicrosoftIdentity/Account/SignIn">Log In</a>
                    </li>
                </NotAuthorized>
            </AuthorizeView>
        </ul>
    </div>
</nav>

@code {
    private void NavigateHome()
    {
        _nav.NavigateTo("/");
    }
}

