    [CascadingParameter]
    public ModalWrapper ModalWrapperComponent { get; set; }

    MouseEventArgs mouseArgs;

    protected override void OnInitialized() =>
        ShowLoginModal(mouseArgs);

    private void ShowLoginModal(MouseEventArgs mouseArgs) =>
