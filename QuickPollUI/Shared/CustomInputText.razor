@inherits InputText

<input 
    @attributes="@AdditionalAttributes" 
    class="@CssClass" 
    @bind="@CurrentValueAsString" 
    @oninput="@HandleBindAfter"
    />


@code {
    [Parameter]
    public EventCallback BindAfter { get; set; }

    public void HandleBindAfter(ChangeEventArgs e)
    {
        CurrentValueAsString = e.Value.ToString();
        BindAfter.InvokeAsync();
    }
}