@inherits InputText

<input 
    @attributes="@AdditionalAttributes" 
    class="@CssClass" 
    @bind="@CurrentValueAsString" 
    @bind:event="oninput"
    @bind:after="HandleBindAfter"
    />


@code {
    [Parameter]
    public EventCallback BindAfter { get; set; }

    public void HandleBindAfter()
    {
        BindAfter.InvokeAsync();
    }
}