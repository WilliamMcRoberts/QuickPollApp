@inject NavigationManager _nav

<div class="poll-list">

    @foreach (var poll in PollsToDisplay)
    {
        <CascadingValue Value="poll">
            <PollDetailsComponent  />
        </CascadingValue>
    }

</div>

@code {
    [Parameter]
    public List<PollModel> PollsToDisplay { get; set; } = new();
}

<style>

    .poll-list {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-gap: 20px;
    }

    @@media(max-width: 1100px) {
        .poll-list {
            display: block;
        }
    }

</style>